  author = {Hori, Masahiro and Aoki, Teruo and Tanikawa, Tomonori and Motoyoshi, Hiroki and Hachikubo, Akihiro and Sugiura, Konosuke and Yasunari, Teppei J. and Eide, Hans and Storvold, Rune and Nakajima, Yukinori and Takahashi, Fumihiro},
  year = {2006},
